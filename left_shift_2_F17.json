{
  "title": "Shift 切换输入法",
  "rules": [
    {
      "description": "Change left_shift to F17 when used alone",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_shift",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_shift"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "f17"
            }
          ]
        }
      ]
    },
    {
      "description": "Change right_shift to F17 when used alone",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "right_shift",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_shift"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "f17"
            }
          ]
        }
      ]
    }
  ]
}